<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aebeid.moviesdb.DetailsActivity"
    android:padding="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Inferno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/background_light"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:padding="20dp"
                android:background="@android:color/holo_blue_dark"
                android:textSize="35sp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="20dp"
                android:id="@+id/textView6"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView2"
                android:textSize="25sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                tools:text="5.19/10"
                android:layout_marginRight="10dp" />

            <TextView
                android:text="2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="210dp"
                android:layout_width="140dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="After waking up in a hospital with amnesia, professor Robert Langdon and a doctor must race against time to foil a deadly global plot."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2"
                android:layout_marginRight="20dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
